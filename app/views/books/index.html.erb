<div class="col-xs-3">
  <h2>User info</h2>
  <img>
  <table>
    <tbody>
      <tr>
        <th>name</th><th>shota</th>
      </tr>
      <tr>
        <th>introduction</th><th>shota</th>
      </tr>
    </tbody>
  </table>
  <h2>New book</h2>
  <%= form_for @book do |f| %>
    <div class="field">
      <p class="field-title">Title<p>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <p class="field">
      <%= f.text_area :opinion %><br>
    </div>
    <%= f.submit 'Create Book', method: :post %>
  <% end %>
</div>

<div class="col-xs-9">
  <h1>Books</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td></td>
          <td><%= book.title %></td>
          <td><%= book.opinion %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
