<%= render 'books/list', book: @book, user: @user %>

<div class="col-xs-9">
  <h1>Book detail</h1>
  <table class="table table-striped">
    <!-- <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead> -->

    <tbody>
        <tr>
          <td><%= link_to user_path(@book.user.id) do %><%= attachment_image_tag @book.user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "40x40" %><% end %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if current_user.id == @user.id %>
            <td><%= link_to "edit", edit_book_path(@book.id) %></td>
            <td><%= link_to "destroy", book_path, method: :delete, data: {confirm: "本当に削除しますか？"} %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
